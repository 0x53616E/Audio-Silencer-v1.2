<Window x:Class="WpfAudioConverter.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAudioConverter"
        mc:Ignorable="d"
        Title="About Audio Silencer"
        SizeToContent="Height" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Color x:Key="AccentGreenColor">#FF00E699</Color>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreenColor}"/>

        <Color x:Key="DarkActionGreenColor">#FF00A870</Color>
        <SolidColorBrush x:Key="DarkActionGreenBrush" Color="{StaticResource DarkActionGreenColor}"/>
        <SolidColorBrush x:Key="DarkActionGreenHoverBrush" Color="#FF00C282"/>

        <SolidColorBrush x:Key="TextPrimaryBrush" Color="White"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B3FFFFFF"/>
        <SolidColorBrush x:Key="GlassBorderBrush" Color="#40FFFFFF"/>

        <Style x:Key="DialogActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkActionGreenBrush}"/>
            <Setter Property="Foreground" Value="#FF002211"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DarkActionGreenHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DialogCloseBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b" Background="{TemplateBinding Background}" CornerRadius="0,12,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="#CCFF3333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" ClipToBounds="True" BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="1">
        <Grid>
            <Grid>
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF081410" Offset="0"/>
                        <GradientStop Color="#FF0F2920" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Ellipse Width="350" Height="250" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-100,-100,-80,0" Opacity="0.4">
                    <Ellipse.Fill>
                        <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                            <GradientStop Color="#FF00FFAA" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <BlurEffect Radius="80"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="#10FFFFFF">
                    <TextBlock Text="About" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="12" FontWeight="SemiBold"/>
                    <Button HorizontalAlignment="Right" Style="{StaticResource DialogCloseBtnStyle}" Click="OkButton_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="10"/>
                    </Button>
                </Grid>

                <StackPanel Grid.Row="1" Margin="30">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <Grid>
                            <TextBlock Text="&#xE767;" FontFamily="Segoe MDL2 Assets" FontSize="42" VerticalAlignment="Center" Foreground="{StaticResource AccentGreenBrush}">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="{StaticResource AccentGreenColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>

                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Audio Silencer" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Version 1.3" Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Separator Background="{StaticResource GlassBorderBrush}" Margin="0,0,0,20"/>

                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" LineHeight="20" TextAlignment="Center" Margin="0,0,0,5">
                        Convert to ogg vorbis and add or remove silence. Required program: FFmpeg.
                    </TextBlock>

                    <TextBlock TextAlignment="Center" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,20">
                        Powered by <Hyperlink NavigateUri="https://ffmpeg.org" RequestNavigate="Hyperlink_RequestNavigate">FFmpeg</Hyperlink>
                    </TextBlock>

                    <TextBlock TextAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14">
                        Author: <Hyperlink NavigateUri="https://github.com/0x53616E" RequestNavigate="Hyperlink_RequestNavigate">Sanya</Hyperlink>
                    </TextBlock>

                    <Separator Background="{StaticResource GlassBorderBrush}" Margin="0,20"/>

                    <TextBlock Text="© 2025 Sanya. All rights reserved." FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" Opacity="0.5" Margin="0,0,0,20"/>

                    <Button Content="OK" 
                            MinWidth="120" 
                            Style="{StaticResource DialogActionButtonStyle}" 
                            HorizontalAlignment="Center"
                            IsDefault="True"
                            Click="OkButton_Click" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>