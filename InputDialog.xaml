<Window x:Class="WpfAudioConverter.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAudioConverter"
        mc:Ignorable="d"
        Title="Input"
        Height="203" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Color x:Key="AccentGreenColor">#FF00E699</Color>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreenColor}"/>

        <Color x:Key="DarkActionGreenColor">#FF00A870</Color>
        <SolidColorBrush x:Key="DarkActionGreenBrush" Color="{StaticResource DarkActionGreenColor}"/>
        <SolidColorBrush x:Key="DarkActionGreenHoverBrush" Color="#FF00C282"/>

        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B3FFFFFF"/>
        <SolidColorBrush x:Key="GlassBorderBrush" Color="#40FFFFFF"/>

        <Style x:Key="DialogActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkActionGreenBrush}"/>
            <Setter Property="Foreground" Value="#FF002211"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DarkActionGreenHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DialogCloseBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b" Background="{TemplateBinding Background}" CornerRadius="0,12,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="#CCFF3333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlassInputBox" TargetType="TextBox">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentGreenBrush}"/>
                                <Setter TargetName="border" Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" ClipToBounds="True" BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="1">
        <Grid>
            <Grid>
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF081410" Offset="0"/>
                        <GradientStop Color="#FF0F2920" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Ellipse Width="300" Height="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-100,-100,-50,0" Opacity="0.4">
                    <Ellipse.Fill>
                        <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                            <GradientStop Color="#FF00FFAA" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <BlurEffect Radius="60"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="#10FFFFFF">
                    <TextBlock Text="Input Required" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="12" FontWeight="SemiBold"/>
                    <Button HorizontalAlignment="Right" Style="{StaticResource DialogCloseBtnStyle}" Click="BtnCancel_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="10"/>
                    </Button>
                </Grid>

                <StackPanel Grid.Row="1" Margin="25,20,25,0" VerticalAlignment="Center">
                    <TextBlock x:Name="lblQuestion" Text="Please enter value:" Foreground="White" FontSize="16" Margin="0,0,0,15" TextWrapping="Wrap"/>

                    <TextBox x:Name="txtAnswer" 
                             Style="{StaticResource GlassInputBox}"
                             MinWidth="250"
                             GotFocus="TxtAnswer_GotFocus" 
                             LostFocus="TxtAnswer_LostFocus"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,25,15">
                    <Button Content="OK" IsDefault="True" Click="btnDialogOk_Click" Style="{StaticResource DialogActionButtonStyle}" Width="100" Height="34"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>