<Window x:Class="WpfAudioConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAudioConverter"
        mc:Ignorable="d"
        Title="Audio Converter" Height="520" Width="850" MinHeight="450" MinWidth="700"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent" ResizeMode="NoResize" MouseDown="Window_MouseDown"
        AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Color x:Key="AccentGreenColor">#FF00E699</Color>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreenColor}"/>
        <Color x:Key="DarkActionGreenColor">#FF00A870</Color>
        <SolidColorBrush x:Key="DarkActionGreenBrush" Color="{StaticResource DarkActionGreenColor}"/>
        <SolidColorBrush x:Key="DarkActionGreenHoverBrush" Color="#FF00C282"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B3FFFFFF"/>
        <SolidColorBrush x:Key="GlassBorderBrush" Color="#40FFFFFF"/>

        <LinearGradientBrush x:Key="GlassPanelBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#33FFFFFF" Offset="0.0"/>
            <GradientStop Color="#15FFFFFF" Offset="0.6"/>
            <GradientStop Color="#0800D18B" Offset="1.0"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AppBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF081410" Offset="0"/>
            <GradientStop Color="#FF0F2920" Offset="1"/>
        </LinearGradientBrush>

        <DropShadowEffect x:Key="GlassLiftEffect" BlurRadius="15" ShadowDepth="4" Direction="270" Color="#FF05100B" Opacity="0.5"/>

        <Style x:Key="GlassPaneStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource GlassPanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Effect" Value="{StaticResource GlassLiftEffect}"/>
        </Style>

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="12,0" BorderThickness="1" BorderBrush="Transparent">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="26"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#40FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkActionGreenBrush}"/>
            <Setter Property="Foreground" Value="#FF002211"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DarkActionGreenHoverBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{StaticResource DarkActionGreenColor}" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#33FFFFFF"/>
                                <Setter Property="Foreground" Value="#88FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <Border x:Name="box" Width="16" Height="16" CornerRadius="4" BorderThickness="1" BorderBrush="#50FFFFFF" Background="#20FFFFFF" Margin="0,0,8,0">
                                <Path x:Name="mark" Data="M 3,8 L 6,11 L 13,4" Stroke="{StaticResource AccentGreenBrush}" StrokeThickness="2" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="mark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="box" Property="BorderBrush" Value="{StaticResource AccentGreenBrush}"/>
                                <Setter TargetName="box" Property="Background" Value="#2000E699"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="box" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WinBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b" Background="{TemplateBinding Background}" CornerRadius="0,0,0,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="#30FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseBtnStyle" TargetType="Button" BasedOn="{StaticResource WinBtnStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b" Background="{TemplateBinding Background}" CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="#CCFF3333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="RootBorder" 
            CornerRadius="20" 
            Margin="10" 
            Background="{StaticResource AppBackgroundGradient}">

        <Border.OpacityMask>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Border Background="Black" SnapsToDevicePixels="True"
                            CornerRadius="{Binding CornerRadius, ElementName=RootBorder}"
                            Width="{Binding ActualWidth, ElementName=RootBorder}"
                            Height="{Binding ActualHeight, ElementName=RootBorder}"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Border.OpacityMask>

        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource GlassPaneStyle}" Margin="10">
                    <Grid Margin="12,20,12,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="5,0,0,25">
                            <Grid Width="20" Height="20" Margin="0,0,10,0">
                                <Viewbox>
                                    <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8Z" Fill="White"/>
                                </Viewbox>
                                <Grid.Effect>
                                    <DropShadowEffect Color="{StaticResource AccentGreenColor}" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                </Grid.Effect>
                            </Grid>
                            <TextBlock Text="Silencer" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1">
                            <TextBlock Text="MENU" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" FontWeight="SemiBold" Margin="8,0,0,8" Opacity="0.7"/>
                            <Button Style="{StaticResource NavButtonStyle}" Background="#20FFFFFF" BorderBrush="#40FFFFFF" BorderThickness="1" Foreground="White">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" Width="26" TextAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBlock Text="Home" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource NavButtonStyle}" Command="{Binding GitHubCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8A7;" Width="26" TextAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBlock Text="GitHub" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource NavButtonStyle}" Command="{Binding AboutCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE946;" Width="26" TextAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBlock Text="About" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                            <Border Background="#3000E699" BorderBrush="{StaticResource AccentGreenBrush}" BorderThickness="1" CornerRadius="6" Padding="8,6" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE770;" Foreground="{StaticResource AccentGreenBrush}" Margin="0,1,6,0" FontSize="12" VerticalAlignment="Top"/>
                                    <TextBlock Grid.Column="1" Text="{Binding LicenseStatus, FallbackValue='Public'}" Foreground="White" FontSize="10" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                </Grid>
                            </Border>
                            <TextBlock Text="v 1.2 Public   (C) Sanya" Foreground="{StaticResource TextSecondaryBrush}" Opacity="0.5" FontSize="10" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                            <Button Style="{StaticResource WinBtnStyle}" Click="MinimizeButton_Click">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE921;" FontSize="10"/>
                            </Button>
                            <Button Style="{StaticResource CloseBtnStyle}" Click="CloseButton_Click">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="10"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,0,10,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Music Conversion" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="10,0,0,15"/>

                        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource GlassPaneStyle}" Margin="0,0,10,0">
                            <StackPanel Margin="20">
                                <TextBlock Text="SETTINGS" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" FontSize="10" Margin="0,0,0,15" Opacity="0.7"/>

                                <CheckBox Content="Apply LUFS Normalization" IsChecked="{Binding ApplyLufsNormalization}" IsEnabled="{Binding IsNotBusy}" Style="{StaticResource ModernCheckBoxStyle}" Margin="0,0,0,10"/>
                                <CheckBox Content="Calculate MADI Values" IsChecked="{Binding CalculateMadiValues}" IsEnabled="{Binding IsNotBusy}" Style="{StaticResource ModernCheckBoxStyle}" Margin="0,0,0,20"/>

                                <Separator Background="{StaticResource GlassBorderBrush}" Margin="0,0,0,20"/>

                                <TextBlock Text="ACTIONS" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" FontSize="10" Margin="0,0,0,10" Opacity="0.7"/>

                                <Button Command="{Binding StartConversionCommand}" IsEnabled="{Binding IsNotBusy}" Style="{StaticResource ActionButtonStyle}" Height="40">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE896;" Margin="0,0,10,0" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="SELECT &amp; CONVERT" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource AccentGreenBrush}" HorizontalAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap" TextAlignment="Center" FontSize="11" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource GlassPaneStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="0,0,0,1" Padding="15,12" Background="#10FFFFFF">
                                    <Grid>
                                        <TextBlock Text="Conversion Log" Foreground="White" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Left"/>
                                    </Grid>
                                </Border>

                                <ScrollViewer Grid.Row="1" Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="15">
                                    <ItemsControl ItemsSource="{Binding ConsoleOutput}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Text}" 
                                                           Foreground="{Binding Color}" 
                                                           FontFamily="Consolas, Monospace" 
                                                           FontSize="11" 
                                                           Margin="0,0,0,2" 
                                                           TextWrapping="Wrap"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>