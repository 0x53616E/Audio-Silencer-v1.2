<Window x:Class="WpfAudioConverter.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAudioConverter"
        mc:Ignorable="d"
        Title="Information"
        SizeToContent="Height" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Color x:Key="AccentGreenColor">#FF00E699</Color>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreenColor}"/>

        <Color x:Key="DarkActionGreenColor">#FF00A870</Color>
        <SolidColorBrush x:Key="DarkActionGreenBrush" Color="{StaticResource DarkActionGreenColor}"/>
        <SolidColorBrush x:Key="DarkActionGreenHoverBrush" Color="#FF00C282"/>

        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B3FFFFFF"/>
        <SolidColorBrush x:Key="GlassBorderBrush" Color="#40FFFFFF"/>

        <Style x:Key="DialogActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkActionGreenBrush}"/>
            <Setter Property="Foreground" Value="#FF002211"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DarkActionGreenHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DialogCloseBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b" Background="{TemplateBinding Background}" CornerRadius="0,12,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="#CCFF3333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" ClipToBounds="True" BorderBrush="{StaticResource GlassBorderBrush}" BorderThickness="1">
        <Grid>
            <Grid>
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF081410" Offset="0"/>
                        <GradientStop Color="#FF0F2920" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Ellipse Width="350" Height="250" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-100,0,0,-80" Opacity="0.3">
                    <Ellipse.Fill>
                        <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                            <GradientStop Color="#FF0099DD" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <BlurEffect Radius="80"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="#10FFFFFF">
                    <StackPanel Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE946;" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,8,0" VerticalAlignment="Center" FontSize="14"/>
                        <TextBlock Text="Information" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" FontSize="12" FontWeight="SemiBold"/>
                    </StackPanel>

                    <Button HorizontalAlignment="Right" Style="{StaticResource DialogCloseBtnStyle}" Click="OkButton_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="10"/>
                    </Button>
                </Grid>

                <TextBlock x:Name="MessageText" 
                           Grid.Row="1" 
                           Text="Your message goes here..." 
                           TextWrapping="Wrap" 
                           Margin="30,25,30,25" 
                           FontSize="15" 
                           Foreground="White"
                           LineHeight="22"/>

                <Border Grid.Row="2" Padding="0,0,25,20">
                    <Button x:Name="OkButton" 
                            Content="OK" 
                            Width="100" 
                            Style="{StaticResource DialogActionButtonStyle}" 
                            HorizontalAlignment="Right"
                            IsDefault="True"
                            Click="OkButton_Click" />
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>